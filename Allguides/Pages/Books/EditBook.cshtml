@page "{bookId:int}"
@model Allguides.Pages.Books.EditBookModel
@{
ViewData["Title"]="Edit";
}
<div style="margin-left:2%">
    <h2>Update Book Details</h2>
</div>

<form method="post">
    <input type="hidden" asp-for="Book.BookId" />
    <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
        <label asp-for="Book.BookName"></label>
        <input asp-for="Book.BookName" class="form-control" />
    </div>
    <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
        <label asp-for="Book.BookCategory"></label>
        <select class="form-control" asp-for="Book.BookCategory" asp-items="Model.Categories">
        </select>
    </div>
    <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
        <label asp-for="Book.AuthorName"></label>
        <input asp-for="Book.AuthorName" class="form-control" />
    </div>
    <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
        <label asp-for="Book.SellerOrDonorName"></label>
        <input asp-for="Book.SellerOrDonorName" class="form-control" />
    </div>
    <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
        <label asp-for="Book.Price"></label>
        <input asp-for="Book.Price" class="form-control" />
    </div>
    <div style="margin-left: 2%;margin-right: 2%;margin-top: 1%; margin-bottom:1%;">
        <button class="btn btn-primary" type="submit">Update</button>
    </div>

</form>


