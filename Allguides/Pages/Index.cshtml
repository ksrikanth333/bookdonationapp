@page
@model Allguides.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Layout1";
}

<div  style="background-image:url('https://media.istockphoto.com/vectors/open-book-with-an-upside-down-pages-vector-id1129548247?k=20&m=1129548247&s=612x612&w=0&h=QYI9YIC_-5M5AqMwxdC5SS7r-CEJf2V9BudHoVrp7Mk=');width:100%;height: 680px;">
  
    
    
</div>

<div class="modal fade" id="addnewbook" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" >
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel">Donate Or Sell Book</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="closeWindow">X</button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <form method="post">
                        <input type="hidden" asp-for="Book.BookId" />
                        <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
                            <label asp-for="Book.BookName"></label>
                            <input asp-for="Book.BookName" class="form-control" />
                        </div>
                        <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
                            <label asp-for="Book.BookCategory"></label>
                            <select class="form-control" asp-for="Book.BookCategory" asp-items="Model.Categories">
                            </select>
                        </div>
                        <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
                            <label asp-for="Book.AuthorName"></label>
                            <input asp-for="Book.AuthorName" class="form-control" />
                        </div>
                        <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
                            <label asp-for="Book.SellerOrDonorName"></label>
                            <input asp-for="Book.SellerOrDonorName" class="form-control" />
                        </div>
                        <div class="form-group" style="margin-left: 2%;margin-right: 2%;margin-top: 1%;">
                            <label asp-for="Book.Price"></label>
                            <input asp-for="Book.Price" class="form-control" />
                        </div>
                        <div style="margin-left: 2%;margin-right: 2%;margin-top: 1%; margin-bottom:1%;">
                            <button class="btn btn-primary" type="submit">Sell Or Donate</button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@if (TempData["AddMessage"] != null)
{
    <script type="text/javascript">
        window.onload = function () {

                alert("@TempData["AddMessage"]");
            };
    </script>
}

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnaddform").click(function () {
                $("#addnewbook").modal("show");
            });
            $("#closeWindow").click(function () {
                $("#addnewbook").modal("hide");
            })
        });
    </script>

}

